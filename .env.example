# Application Information
APP_NAME=claudeee
APP_VERSION=0.1.0
APP_DESCRIPTION=Claude Code Monitoring - A comprehensive monitoring for Claude Code

# Development Configuration
NODE_ENV=development

# Backend Configuration
BACKEND_PORT=8080
FRONTEND_PORT=3000

# CCDash Specific Configuration
# Server Settings
SERVER_PORT=6060
SERVER_HOST=localhost

# API Authentication (Phase 0 Security)
CCDASH_API_KEY=your-secure-api-key-here

# Command Safety Check Configuration
# Set to true to enable Claude Code command whitelist safety checks
# Default is false (yolo mode) - commands run without safety validation
COMMAND_WHITELIST_ENABLED=false

# Legacy environment variable for backward compatibility
# Set to true to disable Claude Code safety checks for all commands
CCDASH_DISABLE_SAFETY_CHECK=false

# Claude Code executable path (default: claude)
CCDASH_CLAUDE_CODE_PATH=claude

# HTTPS Configuration (optional)
CCDASH_HTTPS_ENABLED=false
CCDASH_CERT_FILE=/path/to/cert.pem
CCDASH_KEY_FILE=/path/to/key.pem